<!doctype html>
<html lang="en">
<head>
<style>
body {
  background-color #8a93b8;
}
div {
 margin-left: 100px;
  margin-right: 300px;
  background-color: #c5c4aa;
}
</style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Opintojakso</title>
<!--    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"> -->
</head>
<body class="container" style="margin-top: 50px;">

    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link">Opintojakso</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/opintojakso/add">Add Opintojakso</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        
        <% if(data.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Koodi</th>
                    <th scope="col">Laajuus</th>
		    <th scope="col">Nimi</th>
                    <th width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= data[i].Koodi%></td>
                    <td><%= data[i].Laajuus%></td>
		    <td><%= data[i].Nimi%></td>
                    <td>
                        <a class="btn btn-success edit" href="../opintojakso/edit/<%=data[i].id%>">Edit</a>                       
                        <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../opintojakso/delete/<%=data[i].id%>">Delete</a>                       
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No opintojakso found!</p>
        <% } %>

        </div>
    </div>

</body>
</html>
